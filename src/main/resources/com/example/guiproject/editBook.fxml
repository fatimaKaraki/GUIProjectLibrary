<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<HBox style="-fx-background-color: #2d3447;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guiproject.controllers.EditBooksController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="15.0" HBox.hgrow="ALWAYS">
         <children>
            <Label alignment="CENTER" prefHeight="46.0" prefWidth="241.0" text="Remove a book" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
               <TextField fx:id="bookId" maxWidth="300.0" prefHeight="37.0" prefWidth="161.0" promptText="Enter book ID" />
               <Button mnemonicParsing="false" onAction="#removeBook" prefHeight="25.0" prefWidth="87.0" style="-fx-background-color: #FF6347;" text="Remove" textFill="WHITE" />
               <Label alignment="CENTER" prefHeight="37.0" prefWidth="200.0" text="Add a book" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
               <TextField fx:id="name" maxWidth="300.0" prefHeight="37.0" prefWidth="161.0" promptText="Books Name" />
               <TextField fx:id="category" maxWidth="300.0" prefHeight="37.0" prefWidth="161.0" promptText="Category" />
               <TextField fx:id="publisher" maxWidth="300.0" prefHeight="37.0" prefWidth="161.0" promptText="Author" />
               <Button mnemonicParsing="false" onAction="#addBook" prefHeight="25.0" prefWidth="74.0" style="-fx-background-color: #2196f3;" text="Add" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Button>
               <Button fx:id="goBack" mnemonicParsing="false" onAction="#goback" prefHeight="37.0" prefWidth="102.0" style="-fx-background-color: #2196f3;" text="Back to Books" textFill="WHITE" />
            <Label fx:id="result" alignment="CENTER" prefHeight="37.0" prefWidth="325.0" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
   </padding>
</HBox>
